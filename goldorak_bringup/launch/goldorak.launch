<launch>
    <arg name="robot_ns" default="goldorak" />

    <rosparam
        command="load"
        file="$(find goldorak_bringup)/config/right_wheel.yaml"
        ns="$(arg robot_ns)" />
    <rosparam
        command="load"
        file="$(find goldorak_bringup)/config/left_wheel.yaml"
        ns="$(arg robot_ns)" />

    <include file="$(find uavcan_core)/launch/motor.launch">
        <arg name="motor_ns" value="right_wheel" />
        <arg name="node_uavcan_id" value="10" />
        <arg name="motor_uavcan_id" value="50" />
    </include>

    <include file="$(find uavcan_core)/launch/motor.launch">
        <arg name="motor_ns" value="left_wheel" />
        <arg name="node_uavcan_id" value="11" />
        <arg name="motor_uavcan_id" value="41" />
    </include>
</launch>
